{
  "name": "expense-action",
  "author": "Christian Bromann <mail@bromann.dev>",
  "description": "A GitHub Action that enables WebdriverIO TSC members to grant expense requests for contributed PRs to the project.",
  "version": "1.2.0",
  "license": "MIT",
  "homepage": "https://github.com/webdriverio/expense-action",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webdriverio/expense-action.git"
  },
  "bugs": {
    "url": "https://github.com/webdriverio/expense-action/issues"
  },
  "keywords": [
    "actions",
    "webdriverio",
    "expense"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "prettier --write **/*.{ts,tsx}",
    "format:check": "prettier --check **/*.{ts,tsx}",
    "lint": "eslint .",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "vitest -c vitest.config.ts --run",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@octokit/rest": "^21.0.2",
    "@react-email/components": "^0.0.28",
    "@react-email/tailwind": "^1.0.0",
    "@types/react": "^18.3.12",
    "react": "^18.3.1",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^2.1.6",
    "@wdio/eslint": "^0.0.3",
    "eslint": "^9.16.0",
    "prettier": "^3.4.1",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.7.2",
    "vitest": "^2.0.5"
  }
}
